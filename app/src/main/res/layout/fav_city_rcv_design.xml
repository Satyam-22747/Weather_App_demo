<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:id="@+id/city_sequence_rcv"/>

            <TextView
                android:id="@+id/city_name_rcv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/city_sequence_rcv"
                android:text="Jaipur"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_city_rcv"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                android:background="@drawable/view_city"
                android:layout_toLeftOf="@+id/delete_city_rcv" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_city_rcv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_delete_24"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:textSize="20sp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>